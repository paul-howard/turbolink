<div class="container">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Login</h1>
    </div>
     <hr>
    <div class="row">
      <p><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></p>
      <p><%= link_to "Sign in with Github", user_omniauth_authorize_path(:github) %></p>
      <p><%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter) %></p>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12">
        <%= render 'partials/flash' %>
        <%= bootstrap_form_for :user do |f| %>
          <%= f.email_field :email, placeholder: 'email, username or phone number', :class => "input-lg" %>
          <%= f.password_field :password, placeholder: 'enter your password', :class => "input-lg" %>
          <%= f.submit "Submit", :class => "button button-rounded button-highlight button-large button-block"%>
        <% end %>
      </div>
    </div>
  </div>
</div>