<div class="container">
  <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="page-header">
      <h2>Login</h2>
    </div>
        <div class="row">
      <div class="col-xs-12">
        <%= render 'partials/flash' %>
        <div class="row">
          <p><%= link_to "<i class='fa fa-facebook-square fa-fw'></i>&nbsp;Sign in with Facebook".html_safe, user_omniauth_authorize_path(:facebook), :class => "btn btn-lg btn-default btn-block" %></p>
          <p><%= link_to "<i class='fa fa-github-square fa-fw'></i>&nbsp;Sign in with Github".html_safe, user_omniauth_authorize_path(:github), :class => "btn btn-lg btn-default btn-block" %></p>
          <p><%= link_to "<i class='fa fa-twitter-square fa-fw'></i>&nbsp;Sign in with Twitter".html_safe, user_omniauth_authorize_path(:twitter), :class => "btn btn-lg btn-default btn-block" %></p>
        </div>
      </div>
    </div>
  </div>
</div>