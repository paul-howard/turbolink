<div class="modal fade login-modal" tabindex="-1" role="form" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Welcome!</h4>
      </div>
      <div class="modal-body">
        <div role="tabpanel">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tab-list">
            <li role="presentation" class="active"><a href="#login" role="tab" data-toggle="tab">Login</a></li>
            <li role="presentation"><a href="#signup" role="tab" data-toggle="tab">Create New Account</a></li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">

            <!-- Login Form -->
            <div role="tabpanel" class="tab-pane active" id="login">
              <div class="row">
                <div class="col-xs-12">
                  <%= render 'partials/flash' %>
                  <%= bootstrap_form_tag url:'/login' do |f| %>
                    <div class="form-group">
                    <%= f.email_field :email, placeholder:'email address, please', class:'form-control' %>
                    <%= f.telephone_field :phone_num, placeholder: 'cell phone' %>
                    <%= f.password_field :password, placeholder: 'enter your password' %>
                    </div>
                    <%= f.submit "login" %>
                  <% end %>
                </div>
              </div>
            </div>

            <!-- Signup Form -->
            <div role="tabpanel" class="tab-pane" id="signup">
              <div class="row">
                <div class="col-xs-12">
                  <p>With TurboLink, your cell phone number is your identity. Therefore, before we get you an account, we need to verify your number first.</p>
                  <%= bootstrap_form_tag url:'/login' do |f| %>
                    <div class="form-group">
                    <%= f.telephone_field :phone_num, placeholder: 'cell phone' %>
                    <%= f.password_field :password, placeholder: 'enter your password' %>
                    </div>
                    <%= f.submit "login" %>
                  <% end %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="modal-footer">
        <p>&nbsp;</p>
      </div>
    </div>
  </div>
</div>
