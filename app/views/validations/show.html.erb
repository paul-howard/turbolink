<div id="add-email" class="container">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <div class="page-header">
      <h2 class="text-center">We just texted you an access code. Enter it here:</h2>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= render 'partials/flash' %>
        <%= bootstrap_form_for(@validation) do |f| %>
          <%= f.text_field :code, hide_label: true, :class => 'input-lg' %>
          <%= f.submit "Next >", :class => 'btn-lg btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>